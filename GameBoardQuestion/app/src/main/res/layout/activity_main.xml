<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marcos.gameboardquestion.MainActivity"
    android:background="@drawable/capa">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Game Board Question"
        android:id="@+id/textView_titulo_jogo"
        android:editable="false"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:layout_alignParentEnd="false"
        android:longClickable="false"
        android:typeface="serif" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Criar Sala"
        android:id="@+id/button_criar_sala"
        android:layout_below="@+id/textView_titulo_jogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="147dp"
        android:backgroundTint="#47b480" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Entrar em Sala"
        android:id="@+id/button_entrar_em_sala"
        android:layout_below="@+id/button_criar_sala"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_dark"
        android:backgroundTint="#47b480" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:id="@+id/button_sair"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/button_entrar_em_sala"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#47b480" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="130dp"
        android:id="@+id/imageView2"
        android:background="@drawable/inicial"
        android:layout_below="@+id/textView_titulo_jogo"
        android:layout_alignLeft="@+id/textView_titulo_jogo"
        android:layout_alignStart="@+id/textView_titulo_jogo"
        android:layout_alignRight="@+id/textView_titulo_jogo"
        android:layout_alignEnd="@+id/textView_titulo_jogo" />

</RelativeLayout>
