<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marcos.gameboardquestion.Criar_sala_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Criar Sala"
        android:id="@+id/textView_criar_sala"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Informe o seu nome:"
        android:id="@+id/textView_nome_jogador"
        android:layout_below="@+id/textView_criar_sala"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_nome_jogador"
        android:layout_below="@+id/textView_nome_jogador"
        android:layout_centerHorizontal="true"
        android:text="ex: arlindo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Informe o nome da Sala:"
        android:id="@+id/textView_nome_sala"
        android:layout_below="@+id/editText_nome_jogador"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_nome_sala"
        android:text="Ex: sola mentos"
        android:layout_below="@+id/textView_nome_sala"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proximo"
        android:id="@+id/button_cadastrar_sala"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/editText_nome_sala"
        android:layout_alignRight="@+id/textView_criar_sala"
        android:layout_alignEnd="@+id/textView_criar_sala" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:id="@+id/button_cadastrar_jogador_em_sala"
        android:layout_below="@+id/button_cadastrar_sala"
        android:layout_alignRight="@+id/button_cadastrar_sala"
        android:layout_alignEnd="@+id/button_cadastrar_sala" />

</RelativeLayout>
